{
  "name": "boilerplate_express",
  "version": "1.0.0",
  "description": "this is the boilerplate code for expressjs app in typescript ",
  "main": "src/index.ts",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "docker-dev": "nodemon -L index.ts",
    "dev": "npx concurrently \"npm run dev-watch \" \"npm run dev-start\"",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "dev-start": "nodemon --watch dist --exec \"node dist/index.js\"",
    "dev-watch": "tsc --watch"
  },
  "keywords": [
    "boilerplate",
    "express",
    "typescript"
  ],
  "author": "Abhinav Dhangar",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.3.0",
    "google-auth-library": "^9.13.0",
    "googleapis": "^140.0.1",
    "module-alias": "^2.2.3",
    "mqtt": "^5.7.0",
    "ts-node": "^10.9.2",
    "unique-names-generator": "^4.7.1",
    "winston": "^3.13.0"
  },
  "_moduleAliases": {
    "@root": ".",
    "@src": "dist/src",
    "@utils": "dist/src/utils",
    "@configs": "dist/src/configs"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mqtt": "^2.5.0",
    "@types/winston": "^2.4.4",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.5"
  }
}
